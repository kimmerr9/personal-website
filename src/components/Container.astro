---
import InputItem from "./InputItem.astro";
---
<style>
    .bl, .bt {
        top: 0;
        left: 0;
    }
    .br, .bb {
        bottom: 0;
        right: 0;
    }

    .bl, .br {
        width: 4px;
        height: 0%;
    }

    .bt, .bb {
        width: 0%;
        height: 4px;
    }

    .container:hover > .bl,
    .container:hover > .br {
        height: 100%;
    }

    .container:hover > .bt,
    .container:hover > .bb {
        width: 100%;
    }

    textarea:valid ~ .bl,
    textarea:valid ~ .br {
        height: 100%;
    }

    textarea:valid ~ .bt,
    textarea:valid ~ .bb {
        width: 100%;
    }

</style>
<div class="w-full flex-col space-y-10 pb-7">
    <div class="w-full grid grid-cols-2 gap-5 border-2 border-red-500">
        <InputItem id="fname" content="Full Name"/>
        <InputItem id="email" content="Email"/>
    </div>
    <div class="c2 w-full flex flex-col">
        <h3 class="text-2xl mb-2 ml-2 text-chalk-100">Let's Chat</h3>
        <div class="container relative w-full [&>span]:absolute [&>span]:bg-[#9a9a9a] [&>span]:transition-all-ease [&>span]:duration-400 [&>span]:z-100">
            <textarea rows="6" required class="w-full outline-none border-2 border-chalk-100 p-2 resize-none"></textarea>
            <span class="bl"></span>
            <span class="bt"></span>
            <span class="br"></span>
            <span class="bb"></span>    
        </div>
    </div>
</div>