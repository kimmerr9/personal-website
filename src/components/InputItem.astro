---
import '../styles/global.css';
const { id, content } = Astro.props
---
<style>
    .label-name::after {
        content: "";
        position: absolute;
        bottom: -2px;
        left: 0px;
        width: 100%;
        height: 100%;
        border-bottom: 4px solid #9a9a9a;
        transform: translateX(-100%);
        transition: all 0.3s ease;
    }
    .input-item input:focus + .label-name .content-name,
    .input-item input:valid + .label-name .content-name {
        transform: translateY(-150%);
        font-size: 18px;
        left: 0px;
        color: #9a9a9a;
    }

    .input-item input:focus + .label-name::after,
    .input-item input:valid + .label-name::after {
        transform: translateX(0%);
    }

</style>
<div class="input-item relative h-[70px] overflow-hidden">
    <input type="text" name={id} autocomplete="off" required class="w-full h-full pt-5 text-chalk-100 text-xl border-none focus:outline-none">
    <label for={id} class="label-name absolute bottom-0 left-0 w-full h-full text-2xl pointer-events-none border-b-2 border-b-chalk-100 text-chalk-100">
        <span class="content-name absolute bottom-0 left-[3px] pb-1 transition-all duration-300 ease-in-out">{content}</span>
    </label>
</div>