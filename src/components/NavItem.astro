---
import '../styles/global.css';

const { navItem, href } = Astro.props;
---
<li>
    <a href={href} class="relative inline-block text-2xl transition-all duration-300 group hover:opacity-80">
        {navItem}
        <span class="absolute left-0 -bottom-1 w-0 h-[3px] bg-chalk-100 transition-all duration-300 opacity-70 group-hover:w-full"></span>
    </a>
</li>
